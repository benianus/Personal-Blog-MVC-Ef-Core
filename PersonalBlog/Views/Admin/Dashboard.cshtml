@{
    var articles = (List<ArticleModel>)ViewData["Articles"];
}
<style>
    .flex-container {
        display: flex;
    }
</style>
<div class="centered" style="justify-content:center; align-content:center; align-items:center">
    <div>
        <table class="table text-left" style="width: 700px">
            <thead>
                <th colspan="2">
                    <h1>Personal Blog</h1>
                </th>
                <th>
                    <a class="btn btn-dark" asp-controller="Admin" asp-action="Add">
                        + Add
                    </a>
                </th>
            </thead>
            <tbody>
                @foreach (var article in articles)
                {
                    <tr>
                        <td>@article.Title</td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-controller="Admin" asp-route-id="@article.Id">
                                Edit
                            </a>
                        </td>
                        <td>
                            <form method="post" asasp-controller="admin" asp-action="delete" asp-route-id="@article.Id">
                                <input type="submit" value="Delete" class="btn btn-danger"/>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
	</div>
</div>